<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.coofee.widget.GuideTipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="50dp"
            app:src="@color/popup_color"
            app:topLeftRadius="20dp"
            app:topRightRadius="20dp"
            app:bottomLeftRadius="20dp"
            app:bottomRightRadius="20dp"
            app:radiusRound="true"
            app:arrowDirection="top"
            app:arrowRadius="3dp"
            app:arrowSideLength="15dp"
            app:arrowStartDistance="50dp"
    >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="请点击请点击请点击请点击请点击"
                    android:textColor="#ffffff"
                    android:gravity="center"
            />

            <ImageView
                    android:layout_width="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/stat_sys_phone_call"
            />
        </LinearLayout>

    </com.coofee.widget.GuideTipView>

    <com.coofee.widget.GuideTipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="50dp"
            app:src="@mipmap/ic_launcher"
            app:topLeftRadius="20dp"
            app:topRightRadius="20dp"
            app:bottomLeftRadius="20dp"
            app:bottomRightRadius="20dp"
            app:radiusRound="true"
            app:arrowDirection="bottom"
            app:arrowRadius="3dp"
            app:arrowSideLength="15dp"
            app:arrowStartDistance="50dp"
    >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="请点击请点击请点击请点击请点击"
                    android:gravity="center"
            />

            <ImageView
                    android:layout_width="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/stat_sys_phone_call"
            />
        </LinearLayout>

    </com.coofee.widget.GuideTipView>

    <com.coofee.widget.GuideTipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="50dp"
            app:src="@mipmap/ic_launcher"
            app:topLeftRadius="20dp"
            app:topRightRadius="20dp"
            app:bottomLeftRadius="20dp"
            app:bottomRightRadius="20dp"
            app:radiusRound="false"
            app:arrowDirection="left"
            app:arrowRadius="3dp"
            app:arrowSideLength="15dp"
            app:arrowStartDistance="50dp"
    >

        <LinearLayout
                android:layout_width="20dp"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="请点击请点击请点击请点击请点击"
                    android:gravity="center"
            />

            <ImageView
                    android:layout_width="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/stat_sys_phone_call"
            />
        </LinearLayout>

    </com.coofee.widget.GuideTipView>

    <com.coofee.widget.GuideTipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="50dp"
            app:src="@mipmap/ic_launcher"
            app:topLeftRadius="20dp"
            app:topRightRadius="20dp"
            app:bottomLeftRadius="20dp"
            app:bottomRightRadius="20dp"
            app:radiusRound="false"
            app:arrowDirection="right"
            app:arrowRadius="3dp"
            app:arrowSideLength="15dp"
            app:arrowStartDistance="50dp"
    >

        <LinearLayout
                android:layout_width="20dp"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="请点击请点击请点击请点击请点击"
                    android:gravity="center"
            />

            <ImageView
                    android:layout_width="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/stat_sys_phone_call"
            />
        </LinearLayout>

    </com.coofee.widget.GuideTipView>

</LinearLayout>